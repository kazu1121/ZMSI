@model ZmsiProjOne.ViewModels.HopfieldBaseViewModel

@{
    ViewData["Title"] = "Hopfield form p 1";
}

<h2>Pobieranie danych wstępnych</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="HopfieldBaseData">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WeightMatrixSize" class="control-label"></label>
                <select asp-for="WeightMatrixSize" asp-items="@Model.WeightMatrixSizeSelectList" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ActivationFunction" class="control-label"></label>
                <select asp-for="ActivationFunction" asp-items="@Model.ActivationFunctionSelectList" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ExaminationMode" class="control-label"></label>
                <select asp-for="ExaminationMode" asp-items="@Model.ExaminationModeSelectList" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dalej" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

